import java.util.ArrayList;
import java.util.Scanner;

class Registro {
    private String nome;
    private int idade;
    private String email;
    private String endereco;
    private String telefone;
    private String tipo;
    private String documento; 
//essa classe composta de objetos strings e ints (int: numeros inteiros, strings: letras e nomes completos... ou seja como os cadastros são preenchidos.)

    public Registro(String nome, int idade, String email, String endereco, String telefone, String tipo, String documento) {
        this.nome = nome;
        this.idade = idade;
        this.email = email;
        this.endereco = endereco;
        this.telefone = telefone;
        this.tipo = tipo;
        this.documento = documento;
    }
// continuação da classe acima que que classifica os cadastros e como eles vão reaparecer...
    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public int getIdade() {
        return idade;
    }

    public void setIdade(int idade) {
        this.idade = idade;
    }

    public String getEmail() {
        return email;
    }

    public void setEmail(String email) {
        this.email = email;
    }

    public String getEndereco() {
        return endereco;
    }

    public void setEndereco(String endereco) {
        this.endereco = endereco;
    }

    public String getTelefone() {
        return telefone;
    }

    public void setTelefone(String telefone) {
        this.telefone = telefone;
    }

    public String getTipo() {
        return tipo;
    }

    public void setTipo(String tipo) {
        this.tipo = tipo;
    }

    public String getDocumento() {
        return documento;
    }

    public void setDocumento(String documento) {
        this.documento = documento;
    }
}
// string plublica para classificar e puxar os documentos na hora dos cadastros...
public class Principal {
    public static void main(String[] args) {
        ArrayList<Registro> registros = new ArrayList<>();
        Scanner scanner = new Scanner(System.in);
// aqui ja é classe Principal onde está os System prints, ou seja as opções que serão dadas para o usuario durante o uso do sistema.
        while (true) {
            System.out.println("Para começar escolha um número abaixo.⭣");
            System.out.println("1. Adicionar registro");
            System.out.println("2. Mostrar registros");
            System.out.println("3. Sair");
            System.out.print("Escolha uma opção: ");
            int opcao = scanner.nextInt();
            scanner.nextLine(); 
// case de cadastro, onde será realizado a inscrição de informações por parte do usuario que vai se cadastrar.
            switch (opcao) {
                case 1:
                    System.out.print("Seu Nome: ");
                    String nome = scanner.nextLine();
                    System.out.print("Sua Idade: ");
                    int idade = scanner.nextInt();
                    scanner.nextLine();
                    System.out.print("Seu Email: ");
                    String email = scanner.nextLine();
                    System.out.print("Seu Endereço: ");
                    String endereco = scanner.nextLine();
                    System.out.print("Seu Telefone: ");
                    String telefone = scanner.nextLine();
                    System.out.print("você é Pj ou Pf? ( Pessoa Juridica ou Pessoa Fisica ): ");
                    String tipo = scanner.nextLine();
                    String documento;
                    if (tipo.equalsIgnoreCase("PF")) {
                        System.out.print("CPF: ");
                        documento = scanner.nextLine();
                    } else if (tipo.equalsIgnoreCase("PJ")) {
                        System.out.print("CNPJ: ");
                        documento = scanner.nextLine();
                    } else {
                        System.out.println("Tipo inválido!");
                        continue;
                    }

                    Registro novoRegistro = new Registro(nome, idade, email, endereco, telefone, tipo, documento);
                    registros.add(novoRegistro);
                    break;
            // case tabular é onde está alocado a formatação para separar os cadastros feitos em formato de tabela.    
                case 2:
                    System.out.println("Registros:");
                    System.out.println("-------------------------------------------------------------------------------------------------------------------------------");
                    System.out.printf("| %-20s | %-4s | %-19s | %-25s | %-12s | %-4s | %-14s |\n", "Nome", "Idade", "Email", "Endereço", "Telefone", "Tipo", "Documento");
                    for (Registro registro : registros) {
                        System.out.printf("| %-20s | %-5d | %-19s | %-25s | %-12s | %-4s | %-14s |\n", registro.getNome(), registro.getIdade(), registro.getEmail(), registro.getEndereco(), registro.getTelefone(), registro.getTipo(), registro.getDocumento());
                    }
                    System.out.println("-------------------------------------------------------------------------------------------------------------------------------");
                    break;
            // case de erro, rodapé e " assinaturas " ( totalmente opcional nosso ), aq está para se o usuario escrever uma opção invalida e se caso tudo certo ao final do programa irá aparecer as assinaturas.  
                case 3:
                    System.out.println("DESENVOLVIDO E CRIADO POR @Luffy @VidroPort @ordep @SyzerDev @IronMan :D  ('') ");
                    scanner.close();
                    return;
                default:
                    System.out.println("ERRO DE DIGITAÇÃO CONSAGRADO(A)...");
            }
        }
    }
}
